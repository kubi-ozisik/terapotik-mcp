{
  "name": "terapotik-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "terapotik app with its mcp and api components",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @terapotik/mcp-server dev\" \"pnpm --filter @terapotik/api dev\" \"pnpm --filter @terapotik/web dev\"",
    "dev:web": "pnpm --filter @terapotik/web dev",
    "build": "pnpm --filter @terapotik/shared build && pnpm --filter @terapotik/mcp-server build && pnpm --filter @terapotik/api build && pnpm --filter @terapotik/web build",
    "db:generate": "pnpm --filter @terapotik/shared db:generate",
    "db:migrate": "pnpm --filter @terapotik/shared db:migrate",
    "db:studio": "pnpm --filter @terapotik/shared db:studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kubi-ozisik/terapotik-mcp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/kubi-ozisik/terapotik-mcp/issues"
  },
  "homepage": "https://github.com/kubi-ozisik/terapotik-mcp#readme",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "zod-to-json-schema": "^3.24.6"
  }
}