{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "program": "next",
      "args": ["dev", "--turbopack"],
      "cwd": "${workspaceFolder}/packages/terapotik-app",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Next.js App (terapotik-app)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/terapotik-app"
    },    {
      "name": "Debug MCP Server (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/mcp-server/src/index.ts",
      "runtimeArgs": ["-r", "tsx/cjs"],
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/packages/mcp-server/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/mcp-server"
    },
    {
      "name": "Debug API Server (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/api/src/server.ts",
      "runtimeArgs": ["-r", "tsx/cjs"],
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/packages/api/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/api"
    },
    {
      "name": "Debug API Server (Compiled JS)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/api/dist/server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/packages/api/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/api",
      "preLaunchTask": "build-api"
    }
  ],
  "tasks": [
    {
      "label": "build-api",
      "type": "shell",
      "command": "pnpm",
      "args": ["build", "--filter", "@terapotik/api"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build-terapotik-app",
      "type": "shell",
      "command": "pnpm",
      "args": ["build", "--filter", "terapotik-app"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}