{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "sourceMap": true,
      "types": ["node"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "references": [
      { "path": "../shared" }
    ]
  }